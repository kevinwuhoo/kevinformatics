%html
  %head
    - if @title != ""
      %title
        Kevin Wu | #{@title}
    - else
      %title Kevin Wu
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js", :type => "text/javascript"}
    %script{:src => "jquery.lettering.js", :type => "text/javascript"}
    %script{:src => "script.js", :type => "text/javascript"}
    %link{:href => "reset.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "stylesheet.css", :rel => "stylesheet", :type => "text/css"}/
    - if @is_index
      %link{:href => "index.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=PT+Serif", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=PT+Sans:regular", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=PT+Sans+Caption", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Tangerine:bold", :rel => "stylesheet", :type => "text/css"}
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-23336911-1']);
        _gaq.push(['_setDomainName', '.kevinformatics.com']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    %body
    %header
      %br/
      %p
        %a#name{:href => "/"} Kevin Wu
      %br/
    #wrapper
      = yield

